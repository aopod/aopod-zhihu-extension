{
  "manifest_version": 2,

  "name": "AOPOD知乎扩展",
  "description": "提供部分额外的功能，主要为：1、问题页绕过禁止复制；2、问题页宽屏访问；3、问题页面导航栏调整；4、隐藏顶部Adblock提示；5、允许在当前页面生成二维码。",
  "version": "1.2",

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "css": ["question.css"],
    "js": ["question.js"],
    "matches": [
      "https://www.zhihu.com/question/*"
    ]
  }, {
    "css": ["adblock.css"],
    "matches": [
      "https://*.zhihu.com/*"
    ]
  }]
}
